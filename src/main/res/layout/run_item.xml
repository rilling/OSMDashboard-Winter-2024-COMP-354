<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/runView">
    <View android:layout_height="2dip" android:background="#FF909090"/>
    <TableRow android:layout_weight="1">
        <TableLayout android:layout_weight="1" android:id="@+id/itemLayout">
            <TableRow android:layout_weight="1" android:id="@+id/name_header">
                <TextView android:layout_column="0" android:layout_span="4" android:padding="3dip" android:id="@+id/item_Name" android:hint="Run A" android:textSize="20sp" android:layout_weight="1"/>
            </TableRow>
            <TableRow>
                <TextView android:layout_column="0" android:padding="3dip" android:text="Avg Speed (km/h)" android:layout_weight="1"/>
                <TextView android:layout_column="1" android:padding="3dip" android:text="Max Speed (km/h)" android:layout_weight="1"/>
                <TextView android:layout_column="2" android:padding="3dip" android:text="Run Time (min:sec)" android:layout_weight="1"/>
                <TextView android:layout_column="3" android:padding="3dip" android:text="Distance (meters)" android:layout_weight="1"/>
            </TableRow>
            <TableRow android:layout_weight="1">
                <TextView android:layout_column="0" android:padding="3dip" android:id="@+id/avgSpeedInput" android:hint="input" android:layout_weight="1"/>
                <TextView android:layout_column="1" android:padding="3dip" android:id="@+id/maxSpeedInput" android:hint="input" android:layout_weight="1"/>
                <TextView android:layout_column="2" android:padding="3dip" android:id="@+id/runTimeInput" android:hint="input" android:layout_weight="1"/>
                <TextView android:layout_column="3" android:padding="3dip" android:id="@+id/distanceInput" android:hint="input" android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
    </TableRow>
</TableLayout>